<header role="banner">
<%#= render partial: 'shared/announcement' %>
  <div class="l-branding__pul">
    <div class="container">
      <a href="https://library-stage.princeton.edu" title="Princeton University Library" class="logo__pul col-xs-12 col-sm-6">
         <%= image_tag("library_full_logo.svg", class: "logo-svg") %>
         <%= image_tag("library_full_logo.png", class: "logo-no-svg") %>
      </a>
      <div class="pull-right menu--level-1 col-xs-12 col-sm-6">
        <ul>
          <li><%= link_to 'Help', main_app.page_path('help') %></li>
          <li><a href="/feedback">Feedback</a></li>
          <%= render :partial=>'/account' unless params[:action] == 'error' %>
        </ul>
      </div>
    </div>
  </div>
  <% unless params[:action] == 'error' || params[:action] == 'generate' %>
    <div class="header__secondary">
      <nav class="container" role="navigation">
        <div id="search-navbar" class="col-xs-12 col-sm-12 col-md-8" role="search">
          <%= render_search_bar %>
        </div>
        <%= render :partial=>'/user_util_links' %>
      </nav>
    </div>
  <% end %>
</header>
