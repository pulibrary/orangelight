<%= render 'shared/start_over_row' %>
<% if(@patron) %>
  <div class="row">
    <div class="col-md-12">
      <h1 class="page-heading"><%= @patron["first_name"] %> <%= @patron["last_name"] %>'s account</h1>
      <dl class="account--patron_info">
        <dt>Barcode</dt>
        <dd><%= @patron["barcode"] %></dd>
      </dl>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3 account--sidebar">
      <ul class="nav nav-pills">
        <li class="nav-item w-100"><a class="nav-link" href="#charged-items">Charged items</a></li>
        <li class="nav-item w-100"><a class="nav-link" href="#items-available">Items available for pickup</a></li>
        <li class="nav-item w-100"><a class="nav-link" href="#outstanding-requests">Outstanding requests</a></li>
        <li class="nav-item w-100"><a class="nav-link" href="#fines-fees">Fines and fees</a></li>
      </ul>
    </div>
    <div class="col-md-9 account--main">
      <p>If you have questions, please email <a href="mailto:fstcirc@princeton.edu">fstcirc@princeton.edu</a> or call (609) 258-3202.</p>
      <% if(@account) %>
        <h2 class="section-heading">Patron blocks</h2>
        <%= render 'blocks' %>
        <%= render 'demerits' %>
        <h2 class="section-heading" id="charged-items">Charged items</h2>
        <%= render 'charged_items' %>
        <h2 class="section-heading" id="requests">Requested items</h2>
        <%= render 'request_items' %>
        <%= render 'fines_fees' %>
      <% end %>
    </div>
  </div>
<% end %>
