                      <!-- <li> <%#= link_to folder.name, blacklight_folders.folder_path(folder) %> </li> -->
                    <%# end %>
                  <!-- </ul> -->
            <%# end %>
        <!-- </li> -->
      </ul>
    </div>
</div>
