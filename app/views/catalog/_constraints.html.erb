<% if query_has_constraints? %>
  <div id="appliedParams" class="clearfix constraints-container">
    <div class="button--start-over">
      <%=link_to t('blacklight.search.start_over').html_safe, start_over_path, :class => "catalog_startOverLink btn btn-primary", :id=>"startOverLink" %>
    </div>
    <div class="button--edit-search">
      <%=link_to t('blacklight.search.edit_search'), blacklight_advanced_search_engine.advanced_search_path(params.permit!.except(:controller, :action)), :class => "catalog_editSearchLink btn btn-default", :id=>"editSearchLink" %>
    </div>
    <span class="constraints-label sr-only"><%= t('blacklight.search.filters.title') %></span>
    <%= render_constraints(params) %>
  </div>
<% end %>
