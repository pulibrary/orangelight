<%= simple_form_for form, url: contact_question_path, html: { novalidate: false }, remote: true do |f| %>
  <%= f.label :name %><br>
  <%= f.input_field :name %><br>
  <%= f.label :email %><br>
  <%= f.input_field :email %><br>
  <%= f.label :message %><br>
  <%= f.input_field :message, as: :text, style: "width: 100%" %><br>
  <%= f.input :context, as: :hidden %>
  <%= f.input :title, as: :hidden %>
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
  <%= f.submit "Send", class: "btn btn-primary" %>
<% end %>
