<% document = @request.try(:request)&.doc %>
<div class="col-12">
    <%= render partial: 'return_to_record_link', locals: {record_url: @request.catalog_url} %>
    <div class="doc-<%= @request.system_id %>">
        <h1>
          <%= request_title %>
        </h1>
      </div>
      <div class="col-12">
        <div class="bibliographic">
          <% if document %>
            <%= render partial: 'show_basic_metadata', locals: { document: document } %>
          <% end %>
        </div>
      </div>
      <%= render 'flash_messages' %>
    </div>
    <% if @request.requestable? %>
      <div class="col-12">
        <%= @request.patron_message %> </div>
        <%= render "form" %>
      </div>
    <% else %>
      <div class="message flash-alert">
        <p><%= @request.non_requestable_message %></p>
      </div>
    <% end %>
</div>
