<table width="100%" cellpadding="0" cellspacing="0" border="0" class="responsive-table">
  <tr>
    <td valign="top" width="50%" class="responsive-column-container">
      <table border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr><td>
          <div style="font-size:25px;font-weight:bold;display:block;line-height:1.2;"><a href="https://catalog.princeton.edu/catalog/<%= @submission.bib["id"] %>" target="_blank"><%= @submission.items.first["call_number"]%></a></div>
          <span style="font-size:12px;display:block;">Call Number</span>
        </td></tr>
      </table>
    </td>

    <td valign="top" width="50%" class="responsive-column-container">
      <% hide_date ||= ""
         if hide_date.blank? %>
           <table border="0" cellpadding="0" cellspacing="0" width="100%">
             <tr><td class="right-aligned-desktop" style="text-align:right;">
               <div style="font-size:25px;font-weight:bold;display:block;line-height:1.2;"><%= (DateTime.now + 7).strftime('%m/%d/%Y') %></div>
               <span style="font-size:12px;display:block;">Pick-up By</span>
             </td></tr>
           </table>
      <% end %>
    </td>
  </tr>
</table>
