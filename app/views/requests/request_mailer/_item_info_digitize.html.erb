<div style="margin-bottom:18px;font-weight:normal;font-size:16px;">Digitization Requested</div>
<table style="width:100%;">
  <% @submission.items.each do |item, index| %>
  <tr>
    <% edd_items = item.select{|key, value| key.include?('edd_') && !(key.include?("call_number") || key.include?("edd_title"))} %>
    <td style="border:1px solid #ccc;padding: 18px;">
      <table width="100%" cellpadding="0" cellspacing="0" border="0" class="responsive-table">
        <tr>
          <% edd_items.each do |key, value| %>
          <% unless key == "selected" || value.empty? %>
          <td valign="top" class="responsive-column-container-all">
            <div style="font-weight:normal;font-size:12px;">
              <% if key == "pick_up" %>Pick-up<% else %><%= format_label(key.gsub("edd_", "")) %><% end %></div>
            <span style="margin-bottom:0;"
              class="large-print"> <%= value.html_safe %></span>
          </td>
          <% end %>
          <% end %>
        </tr>
      </table>
    </td>
  </tr>
  <% end %>
</table>